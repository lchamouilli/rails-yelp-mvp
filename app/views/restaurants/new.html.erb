
<div class='container mt-5'>
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category, collection: Restaurant::CATEGORIES.sort %>
    <%= f.input :phone_number %>
    <%= f.submit "Create", class: "btn btn-primary" %>
  <% end %>
</div>
